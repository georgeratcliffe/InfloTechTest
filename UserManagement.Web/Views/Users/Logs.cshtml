@model AuditLogsViewModel

<h2> Audit Logs</h2>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Forename</th>
                <th>Surname</th>
                <th>Date of Birth</th>
                <th>Email</th>
                <th>Account Active</th>
                <th>Start Date Time</th>
                <th>End Date Time</th>
                <th>State</th>
                <th style="width: 1px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AuditEntries)
            {
                <tr>
                    <td>
                        @item.Forename
                    </td>
                    <td>
                        @item.Surname
                    </td>
                    <td>
                        @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.DateOfBirth))
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @(item.IsActive ? "Yes" : "No")
                    </td>
                    <td>
                        @(item.StartTime)
                    </td>
                    <td>
                        @(item.EndTime)
                    </td>
                    <td>
                        @(item.EntityState)
                    </td>
                </tr>
            }
    </table>

</div>
